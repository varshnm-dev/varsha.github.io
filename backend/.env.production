# Production Environment Configuration
NODE_ENV=production
PORT=10000

# MongoDB Connection (will be provided by Render)
MONGODB_URI=mongodb://localhost:27017/household-gamification

# JWT Configuration (generate secure values for production)
JWT_SECRET=your_secure_jwt_secret_change_this_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration (will be set by Render)
CLIENT_URL=https://your-frontend-url.onrender.com
FRONTEND_URL=https://your-frontend-url.onrender.com

# Rate Limiting (production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000